<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TravelAgencyApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TravelAgencyApp.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Profile">
        <ShellContent
            ContentTemplate="{DataTemplate local:ProfileView}" />
    </FlyoutItem>
    <FlyoutItem Title="Basket">
        <ShellContent
            ContentTemplate="{DataTemplate local:BasketView}" />
    </FlyoutItem>

</Shell>