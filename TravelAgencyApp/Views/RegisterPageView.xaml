<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelAgencyApp.Views.RegisterPageView"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Content>
        <Grid>
            <Image Source="italy.jpg"
                Aspect="AspectFill"/>

            <Grid
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border
                        x:Name="border"
                        StrokeThickness="0"
                        Grid.Row="0"
                        Margin="25,250,25,150"
                        BackgroundColor="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25" />
                    </Border.StrokeShape>
                    <VerticalStackLayout
                            Padding="20,20,20,20"
                            HorizontalOptions="FillAndExpand"
                            Spacing="20"
                            VerticalOptions="FillAndExpand">

                        <Label
                            FontAttributes="Bold"
                            FontSize="24"
                            HorizontalOptions="CenterAndExpand"
                            Text="Registration"
                            TextColor="Black" />
                        <Label
                            HorizontalOptions="CenterAndExpand"
                            Text="Enter your email and password"
                            TextColor="Black" />

                        <Border Padding="8"
                                BackgroundColor="White">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="25" />
                            </Border.StrokeShape>
                            <Entry
                                IsTextPredictionEnabled = "False"
                                IsSpellCheckEnabled="false"
                                ClearButtonVisibility="WhileEditing"
                                HorizontalOptions="FillAndExpand"
                                TextColor="Black"
                                Placeholder="Email"
                                Text="{Binding UserEmail}"
                                VerticalOptions="FillAndExpand" />
                        </Border>

                        <Border Padding="8"
                                BackgroundColor="White">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="25" />
                            </Border.StrokeShape>
                            <Entry
                                IsTextPredictionEnabled = "False"
                                IsSpellCheckEnabled="false"
                                ClearButtonVisibility="WhileEditing"
                                HorizontalOptions="FillAndExpand"
                                TextColor="Black"
                                IsPassword="True"
                                Placeholder="Password"
                                Text="{Binding UserPassword}"
                                VerticalOptions="FillAndExpand" />
                        </Border>


                        <Button
                            BackgroundColor="LightSeaGreen"
                            TextColor="White"
                            Command="{Binding RegisterUserCommand}"
                            CornerRadius="20"
                            Text="Register" />


                        <Button
                            BackgroundColor="LightSeaGreen"
                            TextColor="White"
                            Command="{Binding BackToLoginCommand}"
                            CornerRadius="20"
                            Text="Back to login page" />

                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Grid>

    </ContentPage.Content>

</ContentPage>